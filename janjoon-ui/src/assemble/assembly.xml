<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>distrib</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<moduleSets>
		<moduleSet>
			<!-- Enable access to all projects in the current multimodule build! -->
			<useAllReactorProjects>true</useAllReactorProjects>
			<binaries>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
	</moduleSets>

	<!-- <dependencySets> -->
	<!-- <dependencySet> -->
	<!-- <outputDirectory>/lib</outputDirectory> -->
	<!-- <unpack>false</unpack> -->
	<!-- <scope>runtime</scope> -->
	<!-- <useProjectArtifact>true</useProjectArtifact> -->
	<!-- </dependencySet> -->
	<!-- </dependencySets> -->

	<fileSets>
		<!-- Adds startup scripts to the root directory of zip package. The startup 
			scripts are located to src/main/scripts directory as stated by Maven conventions. -->

		<fileSet>
			<directory>src/run-distrib</directory>
			<outputDirectory>/lib</outputDirectory>
			<includes>
				<include>jetty-runner-8.1.14.v20131031.jar</include>				
			</includes>
		</fileSet>

		<fileSet>
			<directory>target</directory>
			<outputDirectory>/lib</outputDirectory>
			<includes>
				<include>janjoon-ui-2.0-BUILD_NUMBER.war</include>
			</includes>
		</fileSet>
		
		<fileSet>
			<directory>src/log</directory>
			<outputDirectory>/log</outputDirectory>
		</fileSet>

<!-- 		<fileSet> -->
<!-- 			<directory>src/run-distrib</directory> -->
<!-- 			<outputDirectory>/db</outputDirectory> -->
<!-- 			<excludes> -->
<!-- 				<exclude>*.*</exclude> -->
<!-- 			</excludes> -->
<!-- 		</fileSet> -->

		<fileSet>
			<directory>src/run-distrib</directory>
			<outputDirectory>/bin</outputDirectory>
			<includes>
				<include>*.sh</include>
				<include>*.bat</include>
				<include>jetty.xml</include>
			</includes>
		</fileSet>

		<fileSet>
			<directory>src/run-distrib</directory>
			<outputDirectory>/license</outputDirectory>
			<includes>
				<include>*.lic*</include>
			</includes>
		</fileSet>

	</fileSets>
</assembly>